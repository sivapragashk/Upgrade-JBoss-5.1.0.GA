<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

	<display-name>Shade-O-Matic</display-name>
	<context-param>
		<param-name>IMAGE_PATH</param-name>
		<param-value>/opt/files/content.war/shade-o-matic/</param-value>
	 	<description>Image Path</description>
	</context-param>
	<context-param>
		<param-name>IMAGE_URL</param-name>
		<param-value>/content/shade-o-matic/</param-value>
	 	<description>Image Path</description>
	</context-param>
	
  <servlet>
	<servlet-name>AdminControlServlet</servlet-name>
	<servlet-class>com.hd.som.servlet.AdminControlServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>TemplateControlServlet</servlet-name>
	<servlet-class>com.hd.som.servlet.TemplateControlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>AdminControlServlet</servlet-name>
	<url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>TemplateControlServlet</servlet-name>
	<url-pattern>/template</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>	  

</web-app>
