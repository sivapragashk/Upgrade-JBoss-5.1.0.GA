<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

	<display-name>Shade-O-Matic</display-name>
	<context-param>
		<param-name>IMAGE_PATH</param-name>
		<param-value>/opt/files/content.war/shade-o-matic/</param-value>
	 	<description>Image Path</description>
	</context-param>
	<context-param>
		<param-name>IMAGE_URL</param-name>
		<param-value>/content/shade-o-matic/</param-value>
	 	<description>Image Path</description>
	</context-param>
  <filter>
		<filter-name>URLInterceptor</filter-name>
		<filter-class>com.hd.som.filter.URLInterceptor</filter-class>
  </filter>
  <filter-mapping>
		<filter-name>URLInterceptor</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
  <servlet>
	<servlet-name>AdminControlServlet</servlet-name>
	<servlet-class>com.hd.som.servlet.AdminControlServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>TemplateControlServlet</servlet-name>
	<servlet-class>com.hd.som.servlet.TemplateControlServlet</servlet-class>
  </servlet>
  <servlet>
	<servlet-name>ContentControlServlet</servlet-name>
	<servlet-class>com.hd.som.servlet.ContentControlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>AdminControlServlet</servlet-name>
	<url-pattern>/admin.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>TemplateControlServlet</servlet-name>
	<url-pattern>/template.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	<servlet-name>ContentControlServlet</servlet-name>
	<url-pattern>/content.do</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>	  
  <welcome-file-list>
	<welcome-file>home</welcome-file> 
  </welcome-file-list> 
</web-app>
